---
import { Image } from 'astro:assets';
import logo from '/src/assets/logo.png';
import { ViewTransitions } from 'astro:transitions';
---
<ViewTransitions />
<div id="heading-container">
  <div id="title">
    <a id="logo-container" href="https://ncar.ucar.edu/">
      <Image id="logo" class="hoverable" src={logo} alt="NSF NCAR logo" />
    </a>
    <a href="/cisl-visualization-gallery"><h1 id="title-text" class="hoverable">Visualization Services and Research</h1></a>
  </div>
  <nav id="main-nav">
    <ul id="main-nav-ul">
      <a href="/cisl-visualization-gallery/about"><li class="hoverable">About</li></a>
      <li><img id="search-icon" class="hoverable" src="/cisl-visualization-gallery/search.svg" alt="search website" /></li>
    </ul>
  </nav>
</div>

<style>
  #heading-container {
    padding: 0.15em 3em;
    display: flex;
    align-items: flex-end;
    background-color: white;
    border-top: solid 1px #C3D7EE;
    border-bottom: solid 2px rgba(0, 0, 0, 0.25);
    filter: drop-shadow(0px 2px 2px rgba(0, 0, 0, 0.35));
    position: sticky;
    top: 0;
    z-index: 7;
  }

  #title {
    display: flex;
    align-items: flex-end;
    gap: 1em;
  }

  #logo-container {
    max-width: 22%;
  }

  #logo {
    max-width: 100%;
    height: auto;
    display: block;
  }

  h1 {
    font-weight: normal;
    color: #1B648F;
    font-size: 1.65em;
  }

  #main-nav ul {
    list-style-type: none;
    display: flex;
    align-items: flex-end;
    font-size: 20px;
    color: #1B648F;
    gap: 2em;
  }

  #main-nav ul li {
    display: flex;  
    align-items: center;
  }

  li:hover {
    color: #768B00;
  }

  #search-icon {
    width: 1.5em;
    height: auto;
  }

  @media (max-width: 1060px) {
    #title h1 {
      font-size: 1.15em;
    }

    ul li {
      font-size: 0.75em;
    }
  }

  @media (max-width: 1000px) {
    #heading-container { 
        padding: 0.5em 2em;
    }
  }

  @media (max-width: 800px) {
    #logo-container {
      width: 20%;
    }
  }

  @media (max-width: 680px) {
    #logo-container {
      width: 25%;
    }

    #title h1 {
      font-size: 1em;
    }
  }
</style>

<script>
  function adjustPadding() {
      const container = document.querySelector('#title') as HTMLElement;
      const text = document.querySelector('#title-text') as HTMLElement;
      const nav = document.querySelector('#main-nav-ul') as HTMLElement;
      const containerHeight = container.offsetHeight;

      text.style.paddingBottom = `${0.2418 * containerHeight}px`;
      nav.style.paddingBottom = `${0.29 * containerHeight}px`;
    }

    window.addEventListener('load', adjustPadding);
    window.addEventListener('resize', adjustPadding);
    document.addEventListener('astro:page-load', adjustPadding);

</script>