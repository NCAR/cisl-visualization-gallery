---
import { Image } from 'astro:assets';
import logo from '/src/assets/logo.png';
import { ViewTransitions } from 'astro:transitions';
---
<ViewTransitions />
<div id="heading-container">
  <div id="title">
    <a id="logo-container" href="https://ncar.ucar.edu/">
      <Image id="logo" class="hoverable" src={logo} alt="NSF NCAR logo" />
    </a>
    <a href="/cisl-visualization-gallery"><h1 id="title-text" class="hoverable">Visualization Services and Research</h1></a>
  </div>
  <nav id="main-nav">
    <ul id="main-nav-ul">
      <a href="/cisl-visualization-gallery/about"><li class="hoverable">About</li></a>
      <li><img id="search-icon" class="hoverable" src="/cisl-visualization-gallery/search.svg" alt="search website" /></li>
    </ul>
  </nav>
</div>

<style>
  #heading-container {
    padding: 0.15em 3em;
    display: flex;
    align-items: center;
    background-color: white;
    border-top: solid 1px #C3D7EE;
    border-bottom: solid 2px rgba(0, 0, 0, 0.25);
    filter: drop-shadow(0px 2px 2px rgba(0, 0, 0, 0.35));
    position: sticky;
    top: 0;
    z-index: 7;
  }

  #title {
    display: flex;
    align-items: center;
    gap: 1em;
  }

  #logo-container {
    max-width: 22%;
  }

  #logo {
    max-width: 100%;
    height: auto;
    display: block;
  }

  h1 {
    font-weight: 400;
    color: #1B648F;
    font-size: 1.65em;
  }

  #main-nav-ul {
    list-style-type: none;
    display: flex;
    align-items: center;
    font-size: 20px;
    color: #1B648F;
    gap: 2em;
  }

  #main-nav ul li {
    display: flex;  
    align-items: center;
    font-weight: 300;
  }

  li:hover {
    color: #768B00;
  }

  #search-icon {
    width: 1.5em;
    height: auto;
  }

  @media (max-width: 1260px) {
    #title h1 {
      font-size: 1.45em;
    }

    ul li {
      font-size: 1em;
    }
  }

  @media (max-width: 1000px) {
    #heading-container { 
        padding: 0.5em 2em;
        flex-wrap: wrap;
    }

    #logo-container {
      max-width: 30%;
    }

    #title {
      padding-bottom: 0.65em;
      
    }

    #main-nav::before {
      transform: translateX(-2em);
      display: block;
      content: " ";
      height: 1px;
      border-bottom: solid thin #1b658f39;
      width: calc(100vw);
    }

    #title h1 {
      font-size: 1.75em;
    }

    #title-text {
      padding-top: 0.25em;
    }

    #main-nav-ul {
      padding: 0.5em 0 0.1em 0.5em;
      gap: 3em;
    }
  }

  @media (max-width: 810px) {
    #title h1 {
      font-size: 1.5em;
    }
  }

  @media (max-width: 700px) {
    #title h1 {
      font-size: 1.25em;
    }

    ul li {
      font-size: 0.85em;
    }
  }

  @media (max-width: 600px) {
    #heading-container {
      padding: 0.15em 1em;
    }

    #main-nav::before {
      transform: translateX(-1em);
  }

  @media (max-width: 570px) {
    #title h1 {
      font-size: 1em;
    }

    ul li {
      font-size: 0.65em;
    }

    #main-nav-ul {
      gap: 1.5em;
      padding-bottom: 0.25em;
    }
  }

  @media (max-width: 500px) {
    #logo-container {
      max-width: 22%;
    }
    /* #title, #main-nav-ul {
      justify-content: center;
      width: fit-content;
      margin: auto;
    } */

    #main-nav-ul {
      padding-top: 0.25em;
      padding-bottom: 0.1em;

    }
  }

</style>