---
import Card from './Card.astro';
const {posts} = Astro.props;
---
<div id="gallery-container">
    <div class = "gallery-grid">
        <div id="gallery-empty">
            <p>No visualizations for the selected tags were found. Try exploring more tags.</p>
        </div>
        {posts.reverse().map((post) => {
            return <Card coverImage={post.data.coverImage} mediaType={post.data.mediaType} title={(post.data.shortenedTitle) ? post.data.shortenedTitle : post.data.title} slug={post.slug} tags={post.data.topicTags.concat(post.data.modelTags).concat(post.data.softwareTags)}/>
        })}
     </div>
</div>

<style is:global>
    :root {
      --gallery-gap: 1.45em;
      --gallery-items-per-row: 4;
    }

    .card-title {
        font-size: 1.1em;
    }

    #gallery-container {
        background-color: #F2F2F2;
        padding: 3em 0;
    }

    .gallery-grid {
        width: 100%;
        display: flex;
        margin: auto;
        flex-wrap: wrap;
        gap: var(--gallery-gap);
        padding: 0.5em 5em;
        justify-content: flex-start;
    }
  
    @media (max-width: 1360px) {
      .gallery-grid {
          padding: 0.5em 4em;
      }

      .card-title {
        font-size: 1.05em;
      }
    }
  
    @media (max-width: 1100px) {
      .gallery-grid {
          padding: 0.5em 2.5em;
          --gallery-items-per-row: 3;
          --gallery-gap: 1.35em;
      }
      .card-title {
        font-size: 1em;
      }
    }
  
    @media (max-width: 780px) {
      .gallery-grid {
          padding: 0.5em 1.5em;
          --gallery-gap: 1.15em;
          --gallery-items-per-row: 2;
      }
    }

    @media (max-width: 500px) {
      .gallery-grid {
          padding: 0 2.5em;
          --gallery-gap: 1em;
          --gallery-items-per-row: 1;
      }
    }
  </style>

<style>
    #gallery-empty {
        display: none;
        height: 20em;
        text-align: center;
        margin: auto;
        align-items: center;
        justify-content: center;
        font-size: 1.25em;
        color: #292e32;
        font-weight: 300;
    }
</style>